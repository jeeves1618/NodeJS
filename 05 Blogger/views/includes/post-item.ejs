<article class="post-item">
  <h2><%= blog.title %></h2>
  <p class="post-item-author">By <%= blog.name %></p>
  <p><%= blog.summary %></p>
  <div class="post-actions">
    <form action="/delete-post/<%= blog.id %>" method="POST">
      <button class="btn btn-alt">Delete Post</button>
    </form>
    <a href="/edit-post/<%= blog.id %>">Edit Post</a>
    <a class="btn" href="/view-post/<%= blog.id %> ">View Post</a>
  </div>
</article>
